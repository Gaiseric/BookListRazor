@page
@model BookListRazor.Pages.BookList.UpsertModel
@{
    if (@Model.Book.Id != 0)
    {
        ViewData["Title"] = "Edit";
    }
    else
    {
        ViewData["Title"] = "Create";
    }
}
<br />
<div class="card bg-light border-primary mb-5">
    <div class="card-header">
        <h2 class="text-black-50">@(Model.Book.Id != 0 ? "Edit" : "Create new") entry</h2>
    </div>
    <div class="card-body">
        <form method="post">
            @if (Model.Book.Id != 0)
            {
                <input type="hidden" asp-for="Book.Id" />
            }
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Book.Name" class="form-control" />
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Book.Author" class="form-control" />
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.StartRead"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Book.StartRead" class="form-control" />
                    <span asp-validation-for="Book.StartRead" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.EndRead"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Book.EndRead" class="form-control" />
                    <span asp-validation-for="Book.EndRead" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Status"></label>
                </div>
                <div class="col-9">
                    <select asp-for="Book.Status" class="form-select" id="exampleSelect1">
                        <option>Reading</option>
                        <option>Readed</option>
                        <option>Planned</option>
                    </select>
                    <span asp-validation-for="Book.Status" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4 offset-3">
                    <button type="submit" class="btn btn-outline-success form-control"><i class="fas fa-edit"></i> @(Model.Book.Id != 0 ? "Update" : "Create")</button>
                </div>
                <div class="col-4">
                    <a asp-page="/BookList/List" class="btn btn-outline-info form-control"><i class="fas fa-backspace"></i> &nbsp; Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}